<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow2"
    android:layout_margin="@dimen/margin_all"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_Chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_item"
            android:layout_marginLeft="@dimen/margin_all">

            <TextView
                android:id="@+id/tv_namaTempat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="Nama Tempat"/>

            <TextView
                android:id="@+id/tv_lokasiTempat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lokasi"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hargaTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/img_item"
            android:text="Harga" />

        <TextView
            android:id="@+id/tv_ratingTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail"
            android:layout_marginRight="@dimen/margin_all"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:text="Rating"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>